    <script>
        // بيانات النظام
        let games = JSON.parse(localStorage.getItem('ps4Games')) || [];
        let updates = JSON.parse(localStorage.getItem('gameUpdates')) || [];
        let activationData = JSON.parse(localStorage.getItem('activationData')) || {};
        
        // العناصر الرئيسية
        const activationSection = document.getElementById('activation-section');
        const mainSystem = document.getElementById('main-system');
        const activationForm = document.getElementById('activation-form');
        const codeStatusBar = document.getElementById('codeStatusBar');
        const expiryDateSpan = document.getElementById('expiryDate');
        
        const pages = document.querySelectorAll('.page');
        const navItems = document.querySelectorAll('.nav-item');
        const gamesGrid = document.getElementById('gamesGrid');
        const seriesGrid = document.getElementById('seriesGrid');
        const updatesGrid = document.getElementById('updatesGrid');
        const searchInput = document.getElementById('searchInput');
        
        // النوافذ المنبثقة
        const gameModal = document.getElementById('gameModal');
        const importModal = document.getElementById('importModal');
        
        // الأزرار
        const importDataBtn = document.getElementById('importDataBtn');
        const refreshDataBtn = document.getElementById('refreshDataBtn');
        const checkActivationBtn = document.getElementById('checkActivationBtn');
        const closeModalBtn = document.getElementById('closeModalBtn');
        const closeImportModalBtn = document.getElementById('closeImportModalBtn');
        const confirmImportBtn = document.getElementById('confirmImportBtn');
        const cancelImportBtn = document.getElementById('cancelImportBtn');
        
        // فحص التفعيل عند بدء التشغيل
        document.addEventListener('DOMContentLoaded', function() {
            checkActivationStatus();
        });
        
        // نظام التنشيط
        activationForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const activationCode = document.getElementById('activation-code').value.trim();
            
            if (validateActivationCode(activationCode)) {
                activateSystem(activationCode);
            } else {
                alert('رمز التفعيل غير صالح أو منتهي الصلاحية');
            }
        });
        
        // التحقق من صحة الرمز
        function validateActivationCode(code) {
            // تنظيف الرمز من الشرطات
            const cleanCode = code.replace(/-/g, '');
            
            // الحصول على الرموز المخزنة
            const activationCodes = JSON.parse(localStorage.getItem('activationCodes')) || [];
            
            // البحث عن الرمز
            const validCode = activationCodes.find(ac => 
                ac.code.replace(/-/g, '') === cleanCode && 
                ac.isActive && 
                new Date(ac.expiryDate) > new Date()
            );
            
            return validCode !== undefined;
        }
        
        // تفعيل النظام
        function activateSystem(code) {
            const activationCodes = JSON.parse(localStorage.getItem('activationCodes')) || [];
            const activatedCode = activationCodes.find(ac => 
                ac.code.replace(/-/g, '') === code.replace(/-/g, '')
            );
            
            if (activatedCode) {
                // حفظ بيانات التفعيل
                activationData = {
                    code: activatedCode.code,
                    activatedAt: new Date().toISOString(),
                    expiresAt: activatedCode.expiryDate,
                    isActive: true
                };
                
                localStorage.setItem('activationData', JSON.stringify(activationData));
                
                // إخفاء شاشة التنشيط وإظهار النظام
                activationSection.classList.add('hidden');
                mainSystem.classList.remove('hidden');
                
                // تهيئة النظام
                initSystem();
                
                alert('تم تفعيل النظام بنجاح!');
            }
        }
        
        // فحص حالة التفعيل
        function checkActivationStatus() {
            if (activationData.code && activationData.isActive) {
                const now = new Date();
                const expiryDate = new Date(activationData.expiresAt);
                
                if (now < expiryDate) {
                    // النظام مفعل
                    activationSection.classList.add('hidden');
                    mainSystem.classList.remove('hidden');
                    initSystem();
                    updateStatusBar(expiryDate);
                } else {
                    // انتهت الصلاحية
                    activationData.isActive = false;
                    localStorage.setItem('activationData', JSON.stringify(activationData));
                    showActivationScreen();
                }
            } else {
                showActivationScreen();
            }
        }
        
        // إظهار شاشة التنشيط
        function showActivationScreen() {
            activationSection.classList.remove('hidden');
            mainSystem.classList.add('hidden');
        }
        
        // تحديث شريط الحالة
        function updateStatusBar(expiryDate) {
            const formattedDate = expiryDate.toLocaleDateString('ar-EG');
            expiryDateSpan.textContent = formattedDate;
        }
        
        // تهيئة النظام
        function initSystem() {
            displayGames(games);
            displaySeries();
            displayUpdates();
            
            // إضافة بعض البيانات الافتراضية إذا لم تكن موجودة
            if (games.length === 0) {
                loadSampleData();
            }
        }
        
        // التنقل بين الصفحات
        navItems.forEach(item => {
            item.addEventListener('click', () => {
                const pageId = item.getAttribute('data-page');
                
                // تحديث حالة التنشيط
                navItems.forEach(nav => nav.classList.remove('active'));
                item.classList.add('active');
                
                // إظهار الصفحة المطلوبة
                pages.forEach(page => page.classList.remove('active'));
                document.getElementById(pageId).classList.add('active');
                
                // تحديث المحتوى بناءً على الصفحة
                if (pageId === 'homePage') {
                    displayGames(games);
                } else if (pageId === 'seriesPage') {
                    displaySeries();
                } else if (pageId === 'updatesPage') {
                    displayUpdates();
                }
            });
        });
        
        // البحث عن الألعاب
        searchInput.addEventListener('input', () => {
            const searchTerm = searchInput.value.toLowerCase();
            const filteredGames = games.filter(game => 
                game.name.toLowerCase().includes(searchTerm) || 
                (game.categories && game.categories.some(cat => cat.toLowerCase().includes(searchTerm)))
            );
            displayGames(filteredGames);
        });
        
        // عرض الألعاب
        function displayGames(gamesToDisplay) {
            gamesGrid.innerHTML = '';
            
            if (gamesToDisplay.length === 0) {
                gamesGrid.innerHTML = '<p style="text-align: center; grid-column: 1/-1;">لا توجد ألعاب لعرضها</p>';
                return;
            }
            
            gamesToDisplay.forEach(game => {
                const gameCard = document.createElement('div');
                gameCard.className = 'game-card';
                
                let updateBadge = '';
                if (game.hasUpdate) {
                    updateBadge = '<div class="has-update-badge">!</div>';
                }
                
                gameCard.innerHTML = `
                    ${updateBadge}
                    <img src="${game.image}" alt="${game.name}" class="game-cover" onerror="this.src='https://via.placeholder.com/160x220/2d2d2d/ffffff?text=No+Image'">
                    <div class="game-title">${game.name}</div>
                `;
                
                gameCard.addEventListener('click', () => showGameDetails(game.id));
                gamesGrid.appendChild(gameCard);
            });
        }
        
        // عرض السلاسل
        function displaySeries() {
            seriesGrid.innerHTML = '';
            
            // استخراج السلاسل الفريدة
            const series = [...new Set(games.map(game => game.series).filter(Boolean))];
            
            if (series.length === 0) {
                seriesGrid.innerHTML = '<p style="text-align: center; grid-column: 1/-1;">لا توجد سلاسل لعرضها</p>';
                return;
            }
            
            series.forEach(seriesName => {
                const seriesCard = document.createElement('div');
                seriesCard.className = 'series-card';
                seriesCard.innerHTML = `
                    <div class="series-icon">🧩</div>
                    <h3>${seriesName}</h3>
                    <p>${games.filter(game => game.series === seriesName).length} لعبة</p>
                `;
                
                seriesCard.addEventListener('click', () => {
                    const seriesGames = games.filter(game => game.series === seriesName);
                    displayGames(seriesGames);
                    
                    // الانتقال إلى صفحة الألعاب
                    navItems.forEach(nav => nav.classList.remove('active'));
                    document.querySelector('.nav-item[data-page="homePage"]').classList.add('active');
                    
                    pages.forEach(page => page.classList.remove('active'));
                    document.getElementById('homePage').classList.add('active');
                });
                
                seriesGrid.appendChild(seriesCard);
            });
        }
        
        // عرض التحديثات
        function displayUpdates() {
            updatesGrid.innerHTML = '';
            
            if (updates.length === 0) {
                updatesGrid.innerHTML = '<p style="text-align: center; grid-column: 1/-1;">لا توجد تحديثات متاحة</p>';
                return;
            }
            
            updates.forEach(update => {
                const updateCard = document.createElement('div');
                updateCard.className = 'update-card';
                
                updateCard.innerHTML = `
                    <div class="update-version">${update.version}</div>
                    <img src="${update.gameImage}" alt="${update.gameName}" class="update-cover" onerror="this.src='https://via.placeholder.com/160x220/2d2d2d/ffffff?text=No+Image'">
                    <div class="update-title">${update.gameName}</div>
                `;
                
                updateCard.addEventListener('click', () => showUpdateDetails(update.id));
                updatesGrid.appendChild(updateCard);
            });
        }
        
        // عرض تفاصيل اللعبة
        function showGameDetails(gameId) {
            const game = games.find(g => g.id === gameId);
            if (!game) return;
            
            document.getElementById('modalGameTitle').textContent = game.name;
            
            // عرض التصنيفات
            let categoriesHtml = '';
            if (game.categories && game.categories.length > 0) {
                categoriesHtml = `<div class="categories-container">${game.categories.map(cat => `<span class="category-tag">${cat}</span>`).join('')}</div>`;
            }
            
            // عرض لغات الدبلجة
            let dubbingHtml = 'لا توجد';
            if (game.dubbing && game.dubbing.length > 0) {
                dubbingHtml = game.dubbing.join('، ');
            }
            
            // عرض لغات الترجمة
            let subtitlesHtml = 'لا توجد';
            if (game.subtitles && game.subtitles.length > 0) {
                subtitlesHtml = game.subtitles.join('، ');
            }
            
            const gameDetails = document.getElementById('gameDetails');
            gameDetails.innerHTML = `
                <div class="detail-row">
                    <span class="detail-label">الوصف:</span>
                    <span>${game.description || 'لا يوجد وصف'}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">التصنيفات:</span>
                    <span>${categoriesHtml || 'لا توجد'}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">المنصة:</span>
                    <span>${game.platform}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">منظور اللعبة:</span>
                    <span>${game.perspective || 'غير محدد'}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">أسلوب اللعب:</span>
                    <span>${game.playStyle || 'غير محدد'}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">السلسلة:</span>
                    <span>${game.series || 'لا توجد'}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">الدبلجة:</span>
                    <span>${dubbingHtml}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">الترجمة:</span>
                    <span>${subtitlesHtml}</span>
                </div>
                ${game.platform.includes('PS4') ? `
                <div class="download-section">
                    <h3>PS4</h3>
                    <div class="download-buttons">
                        ${game.psGameLinkEnabled && game.psGameLink ? `<a href="${game.psGameLink}" target="_blank" class="download-btn">تحميل اللعبة <span>${game.psSize}G</span></a>` : ''}
                        ${game.psUpdateLinkEnabled && game.psUpdateLink ? `<a href="${game.psUpdateLink}" target="_blank" class="download-btn">تحميل التحديث <span>${game.psUpdateSize || '??'}G</span></a>` : ''}
                        ${game.psDlcLinkEnabled && game.psDlcLink ? `<a href="${game.psDlcLink}" target="_blank" class="download-btn">تحميل الإضافات</a>` : ''}
                        ${game.psTranslationLinkEnabled && game.psTranslationLink ? `<a href="${game.psTranslationLink}" target="_blank" class="download-btn">تحميل الترجمة</a>` : ''}
                    </div>
                </div>
                ` : ''}
                ${game.platform.includes('PC') ? `
                <div class="download-section">
                    <h3>PC</h3>
                    <div class="download-buttons">
                        ${game.pcGameLinkEnabled && game.pcGameLink ? `<a href="${game.pcGameLink}" target="_blank" class="download-btn">تحميل اللعبة <span>${game.pcSize}G</span></a>` : ''}
                        ${game.pcUpdateLinkEnabled && game.pcUpdateLink ? `<a href="${game.pcUpdateLink}" target="_blank" class="download-btn">تحميل التحديث <span>${game.pcUpdateSize || '??'}G</span></a>` : ''}
                        ${game.pcDlcLinkEnabled && game.pcDlcLink ? `<a href="${game.pcDlcLink}" target="_blank" class="download-btn">تحميل الإضافات</a>` : ''}
                        ${game.pcTranslationLinkEnabled && game.pcTranslationLink ? `<a href="${game.pcTranslationLink}" target="_blank" class="download-btn">تحميل الترجمة</a>` : ''}
                    </div>
                </div>
                ` : ''}
            `;
            
            gameModal.classList.add('active');
        }
        
        // عرض تفاصيل التحديث
        function showUpdateDetails(updateId) {
            const update = updates.find(u => u.id === updateId);
            if (!update) return;
            
            const game = games.find(g => g.id === update.gameId);
            
            document.getElementById('modalGameTitle').textContent = `${update.gameName} - تحديث ${update.version}`;
            
            const gameDetails = document.getElementById('gameDetails');
            gameDetails.innerHTML = `
                <div class="detail-row">
                    <span class="detail-label">اللعبة الأصلية:</span>
                    <span>${update.gameName}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">رقم التحديث:</span>
                    <span>${update.version}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">حجم التحديث:</span>
                    <span>${update.size} جيجابايت</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">المنصة:</span>
                    <span>${update.platform}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">تاريخ الإضافة:</span>
                    <span>${new Date(update.dateAdded).toLocaleDateString('ar-EG')}</span>
                </div>
                
                <div class="download-section">
                    <h3>تحميل التحديث</h3>
                    <div class="download-buttons">
                        <a href="${update.link}" target="_blank" class="download-btn">تحميل التحديث <span>${update.size}G</span></a>
                    </div>
                </div>
            `;
            
            gameModal.classList.add('active');
        }
        
        // استيراد البيانات
        importDataBtn.addEventListener('click', () => {
            importModal.classList.add('active');
        });
        
        confirmImportBtn.addEventListener('click', () => {
            const fileInput = document.getElementById('importFile');
            const file = fileInput.files[0];
            
            if (!file) {
                alert('يرجى اختيار ملف البيانات');
                return;
            }
            
            const reader = new FileReader();
            reader.onload = function(e) {
                try {
                    const importedData = JSON.parse(e.target.result);
                    
                    if (Array.isArray(importedData)) {
                        // دعم الملفات القديمة
                        games = importedData;
                    } else if (importedData.games && importedData.updates) {
                        // دعم الملفات الجديدة
                        games = importedData.games;
                        updates = importedData.updates;
                    } else {
                        alert('ملف غير صالح. يرجى اختيار ملف JSON صحيح.');
                        return;
                    }
                    
                    localStorage.setItem('ps4Games', JSON.stringify(games));
                    localStorage.setItem('gameUpdates', JSON.stringify(updates));
                    
                    displayGames(games);
                    displayUpdates();
                    
                    importModal.classList.remove('active');
                    alert('تم استيراد البيانات بنجاح!');
                } catch (error) {
                    alert('خطأ في قراءة الملف. يرجى التأكد من صحة الملف.');
                }
            };
            reader.readAsText(file);
        });
        
        // تحديث البيانات
        refreshDataBtn.addEventListener('click', () => {
            games = JSON.parse(localStorage.getItem('ps4Games')) || [];
            updates = JSON.parse(localStorage.getItem('gameUpdates')) || [];
            
            displayGames(games);
            displaySeries();
            displayUpdates();
            
            alert('تم تحديث البيانات بنجاح!');
        });
        
        // فحص التفعيل
        checkActivationBtn.addEventListener('click', () => {
            checkActivationStatus();
            alert('تم فحص حالة التفعيل');
        });
        
        // إغلاق النوافذ
        closeModalBtn.addEventListener('click', () => gameModal.classList.remove('active'));
        closeImportModalBtn.addEventListener('click', () => importModal.classList.remove('active'));
        cancelImportBtn.addEventListener('click', () => importModal.classList.remove('active'));
        
        // النقر خارج النافذة لإغلاقها
        window.addEventListener('click', (e) => {
            if (e.target === gameModal) gameModal.classList.remove('active');
            if (e.target === importModal) importModal.classList.remove('active');
        });
        
        // تحسين إدخال الرمز
        document.getElementById('activation-code').addEventListener('input', function(e) {
            let value = e.target.value.replace(/-/g, '');
            if (value.length > 16) value = value.substr(0, 16);
            
            // إضافة الشرطات تلقائياً
            let formattedValue = '';
            for (let i = 0; i < value.length; i++) {
                if (i > 0 && i % 4 === 0) {
                    formattedValue += '-';
                }
                formattedValue += value[i];
            }
            
            e.target.value = formattedValue;
        });
        
        // تحميل بيانات نموذجية
        function loadSampleData() {
            const sampleGames = [
                {
                    id: generateId(),
                    name: 'God of War',
                    image: 'https://image.api.playstation.com/vulcan/img/rnd/202010/2217/LsaRVLF2IU2L1FNtyJdM4qgP.png',
                    description: 'انضم إلى كريتوس وأتروس في رحلة ملحمية عبر الممالك الأسطورية للآلهة الإسكندنافية.',
                    categories: ['اكشن', 'مغامرات'],
                    platform: 'PS4',
                    perspective: 'ثالث شخص',
                    playStyle: 'مغامرة قصصية',
                    series: 'God of War',
                    psSize: 45,
                    dubbing: ['انجليزي'],
                    subtitles: ['عربي', 'انجليزي'],
                    psGameLinkEnabled: true,
                    psGameLink: '#',
                    psUpdateLinkEnabled: false,
                    psDlcLinkEnabled: false,
                    psTranslationLinkEnabled: false,
                    hasUpdate: false
                }
            ];
            
            games = sampleGames;
            localStorage.setItem('ps4Games', JSON.stringify(games));
            displayGames(games);
        }
        
        // وظائف مساعدة
        function generateId() {
            return Date.now().toString(36) + Math.random().toString(36).substr(2);
        }
    </script>
</body>
</html>
